<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.findmybus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/buslogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.findmybus.IPsetting"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.findmybus.Login"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.findmybus.Registration"
            android:label="@string/app_name" >
        </activity>

        <service android:name="com.example.findmybus.LocationService" >
        </service>

        <activity
            android:name="com.example.findmybus.CustomerHome"
            android:label="@string/title_activity_customer_home" >
        </activity>
        <activity
            android:name="com.example.findmybus.BusHome"
            android:label="@string/title_activity_bus_home" >
        </activity>
        <activity
            android:name="com.example.findmybus.BusViewTrips"
            android:label="@string/title_activity_bus_view_trips" >
        </activity>
        <activity
            android:name="com.example.findmybus.BusViewReservation"
            android:label="@string/title_activity_bus_view_reservation" >
        </activity>
        <activity
            android:name="com.example.findmybus.Customernearbystops"
            android:label="@string/title_activity_customernearbystops" >
        </activity>
        <activity
            android:name="com.example.findmybus.ViewOtherPlaces"
            android:label="@string/title_activity_view_other_places" >
        </activity>
        <activity android:name="com.example.findmybus.Complaints" >
        </activity>
        <activity
            android:name="com.example.findmybus.SearchRoutes"
            android:label="@string/title_activity_search_routes" >
        </activity>
        <activity
            android:name="com.example.findmybus.ReserveSeat"
            android:label="@string/title_activity_reserve_seat" >
        </activity>
        <activity
            android:name="com.example.findmybus.ViewReserved"
            android:label="@string/title_activity_view_reserved" >
        </activity>
        <activity
            android:name="com.example.findmybus.Payment"
            android:label="@string/title_activity_payment" >
        </activity>
    </application>

</manifest>
